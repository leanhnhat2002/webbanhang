@model List<webbanhang.Models.CartModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<h2>Thông tin giỏ hang</h2>


<p style="font-weight:bold">Giá bán: <span style="color:red; font-size:16pt">  VND</span></p>

Lê Anh Nhật
<h2 style="text-align:center">Thong Tin Gio Hang</h2>
<table align="center" border="1">
    <tr style="text-align:center;font-weight:bold">
        <td>Số Lượng</td>
        <td>Tên Máy</td>
        <td>Ảnh Máy</td>
        <td>Đơn giá</td>
        <td>Thành Tiền</td>
        <td>Xóa sản phẩm</td>
        <td width="50px"></td>
        <td width="50px"></td>
    </tr>
    @foreach (var item in Model)
    {
        <tr style="text-align:center;font-weight:bold">
            <td class="shoping__cart__quantity">
                <div class="quantity">
                    <div class="pro-qty">
                        @Html.EditorFor(model => item.Quantity)
                    </div>
                </div>
            </td>
            <td>@item.Product.Name</td>
            <td width="150" height="150"><img src="~/Content/images/@item.Product.Avatar" /> </td>




            <td>@String.Format("{0:0,0}", item.Product.Price)</td>
            <td>
                @String.Format("{0:0,0}",
                           @item.Total)
            </td>
            <td class="col-md-1 text-center">
                <input type="hidden" value="@item.Product.id" id="productid" />

                <button type="button" class="btn btn-danger">
                    <span class="glyphicon glyphicon-remove" id="removecart">Xóa</span>
                </button>
            </td>
            <td><a href="@Url.Action("Detail","Product", new { Id = item.Product.id})">Chi tiết</a></td>
            <td> <input type="submit" value="Cập Nhật" /></td>


        </tr>
    }

    
    <tr style="font-weight:bold;color:blue;text-align:right">
        <td colspan="9">
           
                Tổng cộng thanh toán: <span>@ViewBag.Sum VND</span>
                
            
        </td>
    </tr>

    <tr style="font-weight:bold;color:blue;text-align:center">
        <td colspan="9">
            <a href="@Url.Action("Index","Payment")" class="btn btn-primary float-md-right" >Thanh Toán</a>
        </td>
    </tr>

</table>